# =============================================================================
# Palli Sahayak Voice AI Agent Helpline - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# CORE API KEYS (Required)
# -----------------------------------------------------------------------------

# Groq API Key - For LLM and Whisper STT
# Get free key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# -----------------------------------------------------------------------------
# TWILIO WHATSAPP (Optional - for WhatsApp bot)
# -----------------------------------------------------------------------------

# Twilio Account Credentials
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886

# -----------------------------------------------------------------------------
# BOLNA.AI VOICE AI (Optional - for phone helpline)
# -----------------------------------------------------------------------------

# Bolna API Key
# Get from: https://app.bolna.ai/settings
BOLNA_API_KEY=your_bolna_api_key_here

# Bolna Agent ID (created after setting up agent)
BOLNA_AGENT_ID=your_bolna_agent_id

# Bolna Webhook Secret (for verifying incoming webhooks)
BOLNA_WEBHOOK_SECRET=your_webhook_secret

# Bolna Phone Number (your helpline number)
BOLNA_PHONE_NUMBER=+919876543210

# -----------------------------------------------------------------------------
# GEMINI LIVE API (Optional - for web voice conversations)
# -----------------------------------------------------------------------------

# Google Cloud Project ID
# Set up at: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Google Cloud Region
GOOGLE_CLOUD_LOCATION=us-central1

# Gemini API Key (alternative to service account)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# -----------------------------------------------------------------------------
# OPENAI (Optional - used by Bolna for LLM)
# -----------------------------------------------------------------------------

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# -----------------------------------------------------------------------------
# ELEVENLABS (Optional - used by Bolna for TTS)
# -----------------------------------------------------------------------------

# ElevenLabs API Key
# Get from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# -----------------------------------------------------------------------------
# KNOWLEDGE GRAPH (Neo4j)
# -----------------------------------------------------------------------------

# Neo4j Connection
# Get from: https://neo4j.com/cloud/aura-free/ (free tier available)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j

# -----------------------------------------------------------------------------
# VOICE ROUTER CONFIGURATION
# -----------------------------------------------------------------------------

# Preferred voice provider: bolna, gemini_live, or fallback_pipeline
VOICE_PREFERRED_PROVIDER=bolna

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------

# Public URL for webhooks (set automatically by ngrok if using)
PUBLIC_BASE_URL=https://your-domain.com

# Server port
PORT=8000

# Enable debug mode
DEBUG=false

# -----------------------------------------------------------------------------
# RAG CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# RAG API Key for securing /api/bolna/query endpoint
RAG_API_KEY=

# Bolna agent name
BOLNA_AGENT_NAME=Palli Sahayak
